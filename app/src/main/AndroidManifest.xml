<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.haowei.wyc.c229sdk">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        tools:replace="android:appComponentFactory">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.faw.hongqi.ui.C229WelcomeActivity"
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name="com.faw.hongqi.ui.WelcomeActivity"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="com.faw.hongqi.ui.C229MainActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.NoBackgroundAndTitleMain"
            />

        <activity
            android:name="com.faw.hongqi.ui.C229ContentActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.NoBackgroundAndTitleMain"
            />
        <activity
            android:name="com.faw.hongqi.ui.C229LoadAndUnzipFileActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Translucent"></activity>
        <activity
            android:name="com.faw.hongqi.ui.C229PlayVideoActivity"
            android:screenOrientation="landscape"
            ></activity>
        <activity
            android:name="com.faw.hongqi.ui.C229InteractionGameActivity"
            android:screenOrientation="landscape"
            >

        </activity>
        <activity
            android:name="com.faw.hongqi.ui.C229SelectCarModelActivity"
            android:screenOrientation="landscape"
            >

        </activity>
    </application>

</manifest>